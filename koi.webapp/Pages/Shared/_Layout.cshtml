    <!-- Custom Styles for Enhanced Menu -->
    <style>
        /* Styling for the menu */
        #navmenu ul {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            justify-content: center;
            gap: 20px;
        }

            #navmenu ul li {
                position: relative;
            }

                #navmenu ul li a {
                    text-decoration: none;
                    font-weight: bold;
                    color: #333;
                    transition: color 0.3s ease, transform 0.3s ease;
                }

                    #navmenu ul li a:hover {
                        color: #007bff;
                        transform: scale(1.1);
                    }

                    /* Active Link Styling */
                    #navmenu ul li a.active {
                        color: #ff6347;
                    }

                /* Dropdown Menu Styling */
                #navmenu ul li ul {
                    display: none;
                    position: absolute;
                    top: 100%;
                    left: 0;
                    background-color: #fff;
                    box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
                    padding: 10px 0;
                    min-width: 180px;
                    z-index: 10;
                }

                #navmenu ul li:hover > ul {
                    display: block;
                }

                #navmenu ul li ul li {
                    padding: 10px;
                }

                    #navmenu ul li ul li a {
                        color: #333;
                    }

                        #navmenu ul li ul li a:hover {
                            color: #007bff;
                        }

        /* Sticky Navbar */
        #header.sticky-top {
            position: sticky;
            top: 0;
            z-index: 100;
            background-color: #ffffff;
            border-bottom: 2px solid #eee;
        }

        /* Home Section */
        #home-intro {
            text-align: center;
            padding: 60px 0;
            background-color: #f7f7f7;
        }

            #home-intro h1 {
                font-size: 2.5rem;
                font-weight: 600;
                color: #333;
            }

            #home-intro p {
                font-size: 1.2rem;
                margin-top: 20px;
                color: #555;
            }

            #home-intro img {
                max-width: 100%;
                height: auto;
                margin-top: 40px;
            }

        /* Section Styling for Each Function */
        .function-section {
            text-align: center;
            padding: 60px 0;
            background-color: #f0f0f0;
        }

            .function-section img {
                max-width: 100%;
                height: auto;
                margin-top: 40px;
            }

            .function-section h2 {
                font-size: 2.5rem;
                color: #333;
            }

            .function-section p {
                font-size: 1.2rem;
                margin-top: 20px;
                color: #555;
            }
    </style>
</head>

