@page
@model koi.webapp.Pages.OrderManagement.IndexModel

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản Lý Đơn Hàng</title>
    <style>
        /* General Styling */
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .container {
            margin-top: 50px;
            max-width: 1200px;
            margin: auto;
        }

        h1 {
            text-align: center;
            font-size: 2.5rem;
            color: #333;
        }

        /* Table Styling */
        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .table th, .table td {
            padding: 10px;
            text-align: center;
            vertical-align: middle;
            border: 1px solid #ddd;
        }

        .table-striped tbody tr:nth-child(odd) {
            background-color: #f9f9f9;
        }

        .table-bordered {
            border: 1px solid #ddd;
        }

        .table thead {
            background-color: #343a40;
            color: #fff;
        }

        /* Action Buttons */
        .btn {
            font-size: 14px;
            padding: 5px 10px;
            margin: 5px;
            cursor: pointer;
            text-decoration: none;
            border-radius: 4px;
        }

        .btn-info {
            background-color: #17a2b8;
            color: white;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
        }

        .btn-sm {
            font-size: 12px;
        }

        /* Link Style */
        a {
            text-decoration: none;
            color: inherit;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Quản Lý Đơn Hàng</h1>
        <p>
            <a class="btn btn-primary" asp-page="Create">Tạo Mới</a>
        </p>
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Order[0].OrderDate)</th>
                    <th>@Html.DisplayNameFor(model => model.Order[0].Quantity)</th>
                    <th>@Html.DisplayNameFor(model => model.Order[0].Product)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Order)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.OrderDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                        <td>@Html.DisplayFor(modelItem => item.Product.Name)</td>
                        <td>
                            <a class="btn btn-info btn-sm" asp-page="./Edit" asp-route-id="@item.Id">Sửa</a> |
                            <a class="btn btn-primary btn-sm" asp-page="./Details" asp-route-id="@item.Id">Chi Tiết</a> |
                            <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-id="@item.Id">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
